<div class="sorting">
  <%= form_tag({controller: "sessions", action: "index"}, method: "get") do %>
    <%= select_tag(:show,
          options_for_select([['Oldest', "oldest"], ['Newest', "newest"]],
          params[:show] ? params[:show] : "newest" ),
          { onchange: 'this.form.submit()' }) %>
  <% end %>
</div>
