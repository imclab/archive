<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="description" content="Howling Vibes, a rock'n'roll band from Berlin">
  <meta name="author" content="Howling Vibes">

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <%= stylesheet_link_tag "application" %>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "application" %>

  <!-- Google Webfonts - Oswald -->
  <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
</head>

<body>
  <div id="container">
    <section id="user-bar">
    <%= render 'layouts/user_bar' %>
    </section>

    <%= render 'layouts/info_bar' %>

    <header>
    <%= render 'layouts/header' %>
    </header>

    <div id="main" role="main">
      <% render_flash_messages %>
      <%= yield %>
    </div>

    <footer>
    <%= render 'layouts/footer' %>
    </footer>
  </div>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-33917574-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
  </body>
</html>
