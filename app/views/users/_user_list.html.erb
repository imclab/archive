<ul class="user-list">
<% users.each do |user| %>
  <li>
  <%= "#{user.name} (#{user.email})" %> 
  <span class="delete">
    <%= link_to '<i class="icon-remove"></i>Delete this user'.html_safe,
                user, :method => :delete, :confirm => "Are you sure?" %>
  </span>
  </li>
<% end %>
</ul>
