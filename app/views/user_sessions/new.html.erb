<h3>Log in</h3>
<%= form_for(:user_session, :url => user_sessions_path,
             :html => { :class => "new_user_session" } ) do |f| %>
  <fieldset>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.submit "Log in" %>
  </fieldset>
<% end %>
