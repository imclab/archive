<h3>Log in</h3>
<%= form_for(:user_session, :url => user_sessions_path,
             :html => { :class => "new_user_session" } ) do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Log in" %>
  </p>
<% end %>
