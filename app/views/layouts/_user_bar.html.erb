<p>
<% if signed_in? %>
  <% if current_user.admin %>
    <span class="admin_tasks">
      <%= link_to "Add new sessions", new_session_path %> |
      <%= link_to "List users", users_path %>
    </span>
  <% end %>
  <span id="user-controls">
  Hello, <%= current_user.name %>
  <% if comments_since_last_activity.count > 0 %>
    <a href='#' id='new-comments-indicator'>
      <%= pluralize(comments_since_last_activity.count, 'new comment') %>
    </a>
  <% end %>
  <%= link_to "Edit profile", edit_user_path(current_user) %> | 
  <%= link_to "Sign out", signout_path, :method => :delete %>
  </span>
<% else %>
  <span id="user-controls">
  <%= link_to "Sign in", signin_path %> or
  <%= link_to "Create an account", signup_path %>
  </span>
<% end %>
</p>
<div class="new-comments">
  <% if comments_since_last_activity.count > 0 %>
    <ul>
      <% comments_since_last_activity.each do |comment| %>
        <li class="link-to-new-comment">
        <%= link_to "#{comment.user.name} commented on #{comment.song.file_name}",
                    song_path(comment.song) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
